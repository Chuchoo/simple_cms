<%if !flash[:notice].blank? %>
    <div class="notice">
      <%=flash[:notice]%>
    </div>
<% end %>


<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="page delete">
  <h2>Delete Subject</h2>

